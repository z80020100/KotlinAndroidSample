<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".usbserial.UsbSerialFragment">

        <!-- Device Selection Section -->
        <TextView
            android:id="@+id/tv_device_section_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="USB Device Selection"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_scan_devices"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Scan for USB Devices"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_device_section_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_devices"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Select USB Device"
            app:layout_constraintTop_toBottomOf="@id/btn_scan_devices"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <AutoCompleteTextView
                android:id="@+id/spinner_devices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="false"
                android:cursorVisible="false" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_device_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="No device selected"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/til_devices"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Connection Control Section -->
        <TextView
            android:id="@+id/tv_connection_section_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connection Control"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_device_info"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_request_permission"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Request USB Permission"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_connection_section_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_connect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Connect to Device"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/btn_request_permission"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_disconnect"
            android:layout_marginEnd="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_disconnect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Disconnect"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/btn_request_permission"
            app:layout_constraintStart_toEndOf="@id/btn_connect"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="4dp" />

        <TextView
            android:id="@+id/tv_connection_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Disconnected"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/btn_connect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Serial Configuration Section -->
        <TextView
            android:id="@+id/tv_config_section_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Serial Configuration (adjustable anytime)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_connection_status"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_baud_rate"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Baud Rate"
            app:layout_constraintTop_toBottomOf="@id/tv_config_section_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <AutoCompleteTextView
                android:id="@+id/spinner_baud_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="false"
                android:cursorVisible="false" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_data_bits"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Data Bits"
            app:layout_constraintTop_toBottomOf="@id/til_baud_rate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <AutoCompleteTextView
                android:id="@+id/spinner_data_bits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="false"
                android:cursorVisible="false" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_stop_bits"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Stop Bits"
            app:layout_constraintTop_toBottomOf="@id/til_data_bits"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <AutoCompleteTextView
                android:id="@+id/spinner_stop_bits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="false"
                android:cursorVisible="false" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_parity"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Parity"
            app:layout_constraintTop_toBottomOf="@id/til_stop_bits"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <AutoCompleteTextView
                android:id="@+id/spinner_parity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="false"
                android:cursorVisible="false" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_apply_config"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Apply Configuration"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/til_parity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Data Transmission Section -->
        <TextView
            android:id="@+id/tv_transmission_section_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data Transmission"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/btn_apply_config"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_send_data"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Enter data to send"
            app:layout_constraintTop_toBottomOf="@id/tv_transmission_section_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_send_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:minLines="2"
                android:maxLines="4" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_append_newline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add line ending (CRLF)"
            android:checked="true"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/til_send_data"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_send_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Send Data"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/cb_append_newline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Log Display Section -->
        <TextView
            android:id="@+id/tv_log_section_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Communication Log"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/btn_send_data"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_clear_log" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_clear_log"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:paddingTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/btn_send_data"
            app:layout_constraintEnd_toStartOf="@id/switch_autoscroll" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_autoscroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto-scroll"
            android:checked="true"
            android:paddingTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/btn_send_data"
            app:layout_constraintEnd_toEndOf="parent" />

        <ScrollView
            android:id="@+id/scroll_log"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?attr/colorSurfaceVariant"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_log_section_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_log_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:textSize="12sp"
                android:text="Log will appear here..." />

        </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
